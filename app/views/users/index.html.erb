<div class="container">
  <div class="row">
    <h1 class="title">Login</h1>
  </div>

 <div class = "errors">
  
    <% if @user.errors.any? %>
      <h1>Errors</h1>
      <ul>
      <% @user.errors.full_messages.each do |m|%> 
          <li> <%= m %> </li>
      <% end %>
      </ul>
    <% end %>
  </div>

  <div class="row">
    <div >
      <%= form_for :user, turbo: false do |f| %>

        <div class="form-group">
          <%= f.label :email %>
          <%= f.text_field :email, class: "from-control", placeholder: "aaa@gamil.com" %>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, class: "from-control", placeholder: "password" %>
        </div>

        <div class="form-group">
          <%= f.submit "Sig up" %>
        </div>   
      <% end %>
      
    </div>